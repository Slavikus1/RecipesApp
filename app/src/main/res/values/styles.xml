<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/main_text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/main_space_half_8</item>
    </style>

    <style name="HeaderTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/header_title_text_size_20</item>
        <item name="android:textColor">@color/header_title_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RecipeFragmentTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/header_title_text_size_20</item>
        <item name="android:textColor">@color/recipe_fragment_purple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleItemCards" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/main_text_size_14</item>
        <item name="android:textColor">@color/header_title_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleItemCardsDescription" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/item_cards_description_12</item>
        <item name="android:textColor">@color/item_cards_description</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CookingMethodDescription" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/main_text_size_14</item>
        <item name="android:textColor">@color/item_cards_description</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="styleSeekBar" parent="TextAppearance.AppCompat">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

    <style name="portionsText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/portions_text_grey</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>