<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_space_half_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/main_space_half_8">

    <LinearLayout
        android:id="@+id/clCard"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/ivCategoryLogo"
            android:layout_width="156dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/bcg_categories" />

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:text="BURGERS" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Самые вкусные рецепты десертов специально для вас" />

    </LinearLayout>

</androidx.cardview.widget.CardView>